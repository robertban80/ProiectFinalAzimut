<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >

<suite name="AllTests" verbose="1" >
    <parameter name="searchtext" value="intel core"></parameter> <!-- valoarea trebuie sa fie de minim doua caractere!!! -->

    <test name="SearchBox" >
        <classes>
            <class name="com.intend.tests.HomepageSearchTests" />
        </classes>
    </test>

    <test name="FilterResults" >
        <classes>
            <class name="com.intend.tests.FilteredSearchTests" />
        </classes>
    </test>

    <test name="AddToCart" >
        <classes>
            <class name="com.intend.tests.AddToCartTests" />
        </classes>
    </test>




    <!--    -->
</suite>
